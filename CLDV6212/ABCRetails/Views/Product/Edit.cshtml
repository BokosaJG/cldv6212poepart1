@model ABCRetails.Models.Product
@{ Layout = "~/Views/Shared/_Layout.cshtml"; }
<h2>Edit Product</h2>
<form method="post" enctype="multipart/form-data">
<div class="mb-2"><label>Product Name</label><input class="form-control" asp-for="ProductName" /></div>
<div class="mb-2"><label>Description</label><textarea class="form-control" asp-for="Description"></textarea></div>
<div class="mb-2"><label>Price</label><input class="form-control" asp-for="Price" type="number" step="0.01"/></div>
<div class="mb-2"><label>Stock</label><input class="form-control" asp-for="StockAvailable" type="number"/></div>
<div class="mb-2"><label>Image</label><input class="form-control" type="file" name="image" /></div>
<button class="btn btn-success">Save</button>
<a href="/Product" class="btn btn-secondary">Cancel</a>
</form>